---
export interface Props {
	hours: {
		[key: string]: {
			closed: boolean;
			openTime: string;
			closeTime: string;
		};
	};
}

const { hours } = Astro.props as Props;
---

<ul>
	{
		Object.entries(hours).map(([key, value]) => (
			<li>
				<p class="day">{key}</p>
				<p class="hours">
					{value.closed ? 'CLOSED' : `${value.openTime} - ${value.closeTime}`}
				</p>
			</li>
		))
	}
</ul>

<style>
	ul {
		list-style: none;
		padding-inline-start: 0px;
		padding-left: 0;
		margin: 0;

		width: 84%;

		display: flex;
		flex-flow: column;
		gap: 1rem;
	}

	li {
		display: flex;
		justify-content: space-between;

		& > p {
			margin: 0;
		}
	}

	.day {
		text-transform: capitalize;
	}

	.hours {
		text-transform: uppercase;
	}
</style>
